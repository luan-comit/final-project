<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fetch Items</title>
</head>
<body>
    <h1>Fetching items</h1>
    <div id="divCategory">
    <form action="/fetch1" method="POST">
        <label for="category">Chose a category</label>
        <input type="text" list="category" name="category">
            <datalist id="category">
                <option value="Amazon Laptop"></option>
                <option value="BestBuy Laptop"></option>
                <option value="Amazon Golf"></option>
                <option value="Kijiji House"></option>
            </datalist>
        <input type="submit" name="submit" id="submit">
    </form>
    </div>
    <hr>
    <div id="divShowFetch">
        <% if(items){ %>
                <h1>Items fetched</h1>
                <% items.forEach((item) => { %>
                    <div style="background-color: white; margin: 10px; border: 2px black solid; padding: 20px; width: 50%;">
                    <% if(item){ %>
                        <form action="/save" method="POST">
                            <input type="text" name="linkItem" value="<%= item.linkItem %>" hidden >
                            <input type="text" name="category" value="<%= item.categogy %>" hidden >
                            <input type="submit" name="saveItem" value="Save this Item" id="saveItem">
                            <a href="<%= item.linkItem %>" target="_blank">Description: <%= item.title %>
                            <p>Price: <%= item.price %></p>
                            <p>Original price: <%= item.price_list %></p>
                            </a>
                            <img src="<%= item.img_src %>" alt="" width="50%"">
                        </form>
                    <hr>
                    <% }else { %>
                        <p>empty fetched</p>
                    <% } %>
                    </div>
                <% }) %>
        <% }else { %>
                    <p>No item yet</p>
           <% } %> 
    </div>
</body>
</html>